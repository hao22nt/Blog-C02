<div class="w3l-homeblock1 py-5">
  <div class="container pt-lg-5 pt-md-4">
    <!-- block -->
    <div class="row">
      <div class="col-lg-12">
        <h3 class="section-title-left">Featured posts </h3>
        <div class="row">
          <div class="col-lg-5 col-md-6 item">
            {{#with outStandingBlog}}
              <div class="card">
                <div class="card-header p-0 position-relative">
                  <a href="/blog/{{id}}">
                    <img
                      class="card-img-bottom d-block radius-image"
                      src="{{image}}"
                      alt="Card image cap"
                    />
                  </a>
                </div>
                <div class="card-body p-0 blog-details">
                  <a href="/blog/{{id}}" class="blog-desc">
                    {{title}}
                  </a>
                  <p>{{description}}</p>
                  <div class="author align-items-center mt-3 mb-1">
                    <a href="#author">{{author}}</a>
                    in
                    <a href="#url">Design</a>
                  </div>
                  <ul class="blog-meta">
                    <li class="meta-item blog-lesson">
                      <span class="meta-value"> {{createdDate}} </span>
                    </li>
                    <li class="meta-item blog-students">
                      <span class="meta-value"> 6min read</span>
                    </li>
                  </ul>
                  <a href="/blog" class="btn btn-style btn-outline mt-4">All
                    featured posts</a>
                </div>
              </div>
            {{/with}}
          </div>
          <div class="col-lg-7 col-md-6 mt-md-0 mt-5">
            <div class="list-view list-view1">
                {{#each blogs}}
                <div class="grids5-info mt-5">
                  <a href="/blog/{{id}}" class="d-block zoom"><img
                      src="{{image}}"
                      alt=""
                      class="img-fluid radius-image news-image"
                    /></a>
                  <div class="blog-info align-self">
                    <a href="/blog/{{id}}" class="blog-desc1">{{title}}
                    </a>
                    <div class="author align-items-center mt-3 mb-1">
                      <a href="#author">{{author}}</a>
                      in
                      <a href="#url">Design</a>
                    </div>
                    <ul class="blog-meta">
                      <li class="meta-item blog-lesson">
                        <span class="meta-value"> {{createdDate}} </span>
                      </li>
                      <li class="meta-item blog-students">
                        <span class="meta-value"> 6min read</span>
                      </li>
                    </ul>
                  </div>
                </div>
              {{/each}}

            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- //block -->

  </div>
</div>